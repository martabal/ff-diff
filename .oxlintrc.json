{
  "categories": {
    "correctness": "error",
    "pedantic": "error",
    "perf": "error",
    "suspicious": "error"
  },
  "ignorePatterns": [".ff-diff", "dist", "coverage"],
  "plugins": [
    "eslint",
    "import",
    "node",
    "oxc",
    "promise",
    "typescript",
    "unicorn",
    "vitest"
  ],
  "rules": {
    "eslint/max-lines-per-function": "off",
    "strict-boolean-expressions" :"off",
    "max-classes-per-file": "off",
    "max-lines": "off",
    "max-dependencies": "off",
    "typescript/no-unsafe-type-assertion": "off"
  }
}
