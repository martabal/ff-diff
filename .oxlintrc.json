{
  "categories": {
    "correctness": "error",
    "pedantic": "error",
    "perf": "error",
    "suspicious": "error"
  },
  "ignorePatterns": ["dist"],
  "plugins": [
    "eslint",
    "import",
    "node",
    "oxc",
    "promise",
    "typescript",
    "unicorn",
    "vitest"
  ],
  "rules": {
    "max-classes-per-file": "off",
    "max-dependencies": "off",
    "eslint/max-lines-per-function": [
      "error",
      {
        "max": 75
      }
    ]
  }
}
